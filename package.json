{
  "name": "serverless-wifi-billing-system",
  "version": "1.0.0",
  "description": "Serverless WiFi Hotspot Billing System for Kenya with M-Pesa Integration",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:lambda": "npm run build && npm run bundle",
    "bundle": "esbuild lambda/*/index.ts --bundle --platform=node --target=node18 --outdir=dist --external:aws-sdk",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "sam:build": "sam build",
    "sam:deploy": "sam build && sam deploy --guided",
    "sam:deploy:dev": "sam build && sam deploy --config-env dev",
    "sam:deploy:prod": "sam build && sam deploy --config-env prod",
    "sam:local": "sam local start-api",
    "sam:invoke": "sam local invoke",
    "sam:validate": "sam validate",
    "local:api": "sam local start-api --port 3000",
    "generate-vouchers": "ts-node scripts/generate-vouchers.ts",
    "seed-packages": "ts-node scripts/seed-packages.ts",
    "migrate-time-based": "ts-node scripts/migrate-to-time-based.ts",
    "deploy:frontend": "powershell -ExecutionPolicy Bypass -File scripts/deploy-frontend.ps1"
  },
  "keywords": [
    "wifi",
    "hotspot",
    "billing",
    "mpesa",
    "kenya",
    "serverless",
    "aws",
    "lambda"
  ],
  "author": "Bill Malea",
  "license": "AGPL-3.0",
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.932.0",
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/client-sns": "^3.450.0",
    "@aws-sdk/client-sqs": "^3.450.0",
    "@aws-sdk/client-lambda": "^3.932.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
