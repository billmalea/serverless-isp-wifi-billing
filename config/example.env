# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# DynamoDB Tables
USERS_TABLE=WiFiBilling-Users
SESSIONS_TABLE=WiFiBilling-Sessions
TRANSACTIONS_TABLE=WiFiBilling-Transactions
VOUCHERS_TABLE=WiFiBilling-Vouchers
GATEWAYS_TABLE=WiFiBilling-Gateways

# SQS Queues
COA_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account-id/coa-queue
PAYMENT_CALLBACK_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account-id/payment-callback-queue

# M-Pesa Daraja API Configuration
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_mpesa_passkey
MPESA_CALLBACK_URL=https://your-api-gateway.com/prod/payment/callback

# Security
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# System Configuration
SYSTEM_NAME=WiFi Hotspot
ADMIN_EMAIL=admin@example.com
DEBUG=false

# S3 Buckets
PORTAL_ASSETS_BUCKET=wifi-billing-portal-assets
LOGS_BUCKET=wifi-billing-logs

# CloudFront
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id
PORTAL_DOMAIN=portal.your-domain.com

# SNS Topics
ADMIN_ALERTS_TOPIC_ARN=arn:aws:sns:us-east-1:your-account-id:admin-alerts

# SMS Gateway (Optional - African's Talking)
SMS_API_KEY=your_sms_api_key
SMS_USERNAME=your_sms_username
